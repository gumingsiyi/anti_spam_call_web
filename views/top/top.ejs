<!DOCTYPE html>
<body>
<div class="layui-header header header-doc layui-row">
    <div class="layui-col-xs4 layui-bg-black">
        <ul class="layui-nav" lay-filter="" style="border-radius: 0">
            <li class="layui-nav-item" style="text-align: center"><a id="123" href=""><img src="/images/favicon.ico" alt="" style="height: 32px"></a></li>
        </ul>
    </div>
    <div class="layui-col-xs8">
        <ul class="layui-nav" lay-filter="" style="text-align: right; border-radius: 0">
            <li class="layui-nav-item" style="text-align: left"><a id="login_status" href=""></a></li>
        </ul>
    </div>
</div>
</body>
<script>
    layui.use('jquery', function () {
        let $ = layui.jquery;
        if (localStorage.getItem('token') === null) {
            $('#login_status').html('未登录')
            if (window.location.pathname !== '/login') {
                window.location.href = '/login'
            }
        } else {
            $('#login_status')
                .html(localStorage.getItem('nickname'))
                .append('<dl class="layui-nav-child"><dd><a id="logout_btn">注销</a></dd></dl>')
        }

        $('#logout_btn').on('click', function () {
            localStorage.removeItem('token');
            localStorage.removeItem('username');
        })
    })
</script>