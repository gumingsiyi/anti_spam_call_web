<!DOCTYPE html>
<body>
<div class="layui-header header header-doc">
        <div class="layui-form layui-hide-xs component" lay-filter="LAY-site-header-component"></div>
        <div class="layui-hide-xs notice"></div>
        <ul class="layui-nav" lay-filter="" style="text-align: right">
            <li class="layui-nav-item" style="text-align: center"><a id="login_status" href=""></a></li>
        </ul>
</div>
</body>
<script>
    layui.use('jquery', function () {
        let $ = layui.jquery;
        if (localStorage.getItem('token') === null) {
            $('#login_status').html('未登录')
            if (window.location.pathname !== '/login') {
                window.location.href = '/login'
            }
        } else {
            $('#login_status')
                .html(localStorage.getItem('nickname'))
                .append('<dl class="layui-nav-child"><dd><a id="logout_btn">注销</a></dd></dl>')
        }

        $('#logout_btn').on('click', function () {
            localStorage.removeItem('token');
            localStorage.removeItem('username');
        })
    })
</script>