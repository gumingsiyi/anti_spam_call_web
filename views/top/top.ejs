        <ul class="layui-nav" lay-filter="" style="border-radius: 0">
            <li class="layui-nav-item" style="text-align: center"><a id="123" href=""><img src="/images/favicon.ico"
                                                                                           alt="" style="height: 32px"></a>
            </li>
        </ul>
    </div>
    <div class="layui-col-xs8">
        <ul class="layui-nav" lay-filter="" style="text-align: right; border-radius: 0; padding-right: 100px">
            <li id="login_status" class="layui-nav-item">
                <a id="username" href=""></a>
                <dl class="layui-nav-child" style="text-align: center"> <!-- 二级菜单 -->
                    <dd><a href="/base_config">基础模型设置</a></dd>
                    <dd><a href="">后台模版</a></dd>
                    <dd>
                        <div style="background-color: black"></div>
