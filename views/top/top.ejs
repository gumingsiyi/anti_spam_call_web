                    <dd><a id="logout_btn" href="">注销</a></dd>
                </dl>
            </li>
        </ul>
    </div>
</div>
</body>
<script>
    layui.use('jquery', function () {
        let $ = layui.jquery;
        if (localStorage.getItem('token') === null) {
            $('#login_status').html('<a id="login_status" href="">未登录</a>')
            if (window.location.pathname !== '/login') {
                window.location.href = '/login'
            }
        } else {
            $('#username')
                .html(localStorage.getItem('nickname') + '<i class="layui-icon layui-icon-down layui-nav-more"/>')
        }

        $('#logout_btn').on('click', function () {
            localStorage.removeItem('token');
            localStorage.removeItem('username');
        })
    })
</script>